@model SistemaPortafolio.Models.HojaVidaDocenteCRP
<div class="panel panel-default">
    <div class="panel-body">
        <h2>CERTIFICACIONES O REGISTROS PROFESIONALES</h2>

        <div class="row">
            <div class="col-lg-6">
                <a href="~/Admin/HojaVida/AgregarEditarEX/" class="btn btn-primary">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Regresar a Experiencias
                </a>
            </div>
            <div class="col-lg-6">
            </div>
        </div>
        <br />
        @using (Html.BeginForm("AgregarEditarCRP", "HojaVida", FormMethod.Post, new { id = "frm-HojaVida" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.hojavidadocentecrp_id)
            @Html.HiddenFor(x => x.hojavida_id)

            <div class="panel panel-default">
                <div class="panel-heading">Información de Certificaciones O Registros Profesionales</div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>Certificación:</label>
                        @Html.EditorFor(model => model.certificacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.certificacion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Institución:</label>
                        @Html.EditorFor(model => model.institucion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.institucion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Año:</label>
                        @Html.EditorFor(model => model.año, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.año, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="~/Admin/HojaVida/AgregarEditarCRP" class="btn btn-danger">Cancelar</a>
            </div>

        }
    <br />
        <div class="panel panel-default">
            <div class="panel-heading">Mis Certificaciones O Registros Profesionales</div>
            <div class="panel-body">
                <table class="table table-hover table-responsive">
                    <tr>
                        <th>
                            Certificacion
                        </th>
                        <th>
                            Institucion
                        </th>
                        <th>
                            Año
                        </th>
                        <th>Opción</th>
                    </tr>

                    @foreach (var item in ViewData["listado"] as List<SistemaPortafolio.Models.HojaVidaDocenteCRP>)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.certificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.institucion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.año)
                            </td>
                            <td>
                                <i data-toggle="tooltip" data-placement="top" title="Modificar" aria-hidden="true"><a href="~/Admin/HojaVida/AgregarEditarCRP/@item.hojavidadocentecrp_id" class="glyphicon glyphicon-pencil btn btn-sm btn-info"></a></i>
                            </td>
                            <td>
                                <i data-toggle="tooltip" data-placement="top" title="Eliminar" aria-hidden="true"><a href="~/Admin/HojaVidaDocenteCRP/Eliminar/@item.hojavidadocentecrp_id" class="glyphicon glyphicon-remove btn btn-sm btn-danger"></a></i>
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
        </div></div>