@model List<SistemaPortafolio.Models.Persona>
@{
    ViewBag.Title = "Consulta01";
    List<SistemaPortafolio.Models.TipoPersona> tipos = ViewBag.tipo;
    var cont = 0;
}


<br />

<div class="panel panel-default">
    <div class="panel-body">
        <div><h2>CONSULTA: Listado de Personas por Tipo</h2>
    </div><br /><br />
        <div id="Grilla" class="panel-group"></div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $("#Grilla").anexGrid({
                class: 'table table-hover',
              //  class: 'table table-hover',
                columnas: [
                    //columna 1: id
                    {
                        leyenda: 'ID', columna: "persona_id", class: "info", style: 'width:50px;', ordenable: true
                    },
                    //columna 2: id
                     {
                         leyenda: 'TIPO', style: 'width:200px;', class: "info", columna: 'nombre', ordenable: true, filtro: function () {
                         return anexGrid_select({
                             data: [
                                 { valor: '', contenido: 'Todo' },
                                 @foreach (var s in tipos)
                             {
                                     <text>
                                         { valor: '@s.tipopersona_id', contenido: '@s.nombre' },
                                     </text>
                                     cont++;
                                     }
                                ]
                     });
        }
            },
                    //columna 3: id
                   
                    //columna 4
                    {
                        leyenda: 'CÓDIGO', columna: 'codigo', class: "info", ordenable: true,
                    },
                     //columna 5: id
                    {
                        leyenda: 'NOMBRE', columna: 'nombrep ', class: "info", ordenable: true
                    },
                    //columna 6: id
                  
                     //columna 6: id
                   
                      //columna 6: id
                    {
                        leyenda: 'ESTADO', columna: 'estado',  class: 'info', ordenable: true,
                    },
     
            
                ],
                modelo: [
                    //campo 1: id
                    { propiedad: 'persona_id' },
                    //campo2: Nombre del cargo
                    {
                        propiedad: 'nombre'        },

              
                    { propiedad: 'codigo' },
                    { propiedad: 'nombrep' },
                    { propiedad: 'apellido' },
                 
                    { propiedad: 'estado' },

                //los botones
                //boton visualizar
                       
         

                ],
                url: '@Url.Content("~/Admin/Consulta01/CargarGrilla/")',
                paginable: true,
                filtrable: true,
                limite: [10, 20, 50, 100],
                columna: 'persona_id',
                columna_orden: "ASC"
            });

        }
        )
</script>


